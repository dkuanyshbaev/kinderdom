{% extends "admin/layout" %}

{% block content %}
<div class="container">
    <img src="/static/upload/{{ logo }}" class="img-thumbnail" alt="Лого"><br><br>

    <form action="/admin/orgs/{{ id }}" method="post" enctype="multipart/form-data">
        <input type="hidden" name="_method" value="put" />

        <div class="form-group">
            <label for="logo">Лого</label>
            <input type="file" accept=".jpg,.png" class="form-control-file" id="logo" name="logo" aria-describedby="logo_help">
            <small id="logo_help" class="form-text text-muted">Выберите изображение в формате jpg или png</small>
        </div>

        <div class="form-group">
            <label for="name">Название</label>
            <input type="text" class="form-control" id="name" name="name" value="{{ name }}">
        </div>

        <div class="form-group">
            <label for="summernote">Описание</label>
            <textarea class="form-control" id="summernote" name="description" rows="10">{{ description }}</textarea>
        </div>

        <div class="form-group form-check">
            {% if published %}
                <input type="checkbox" class="form-check-input" id="published" name="published" checked>
            {% else %}
                <input type="checkbox" class="form-check-input" id="published" name="published">
            {% endif %}
            <label class="form-check-label" for="published">Опубликовано</label>
        </div>

        <button type="submit" class="btn btn-info">Сохранить</button>

        <a href="/admin/orgs" class="btn btn-dark">Отмена</a>
    </form>
    <br>
    <br>
</div>
{% endblock content %}
