{% extends "admin/layout" %}

{% block content %}
<div class="container">
    <a class="btn btn-outline-info" href="/admin/events/add">Добавить акцию</a>
    <br>
    <br>
    <table class="table table-bordered">
        <tbody>
            {% for item in items %}
                <tr>
                    <td class="align-middle">{{ item.name }}</td>
                    <td style="width: 20%; text-align: center"><a href="/admin/events/{{ item.id }}" class="btn btn-outline-warning">Редактировать</a></td>
                    <td style="width: 20%; text-align: center">
                        <form action="/admin/events/{{ item.id }}" method="post">
                            <input type="hidden" name="_method" value="delete" />
                            <button class="btn btn-outline-danger" type="submit" onclick="return confirm('Вы уверены, что хотите удалить элемент?');">Удалить</button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock content %}
